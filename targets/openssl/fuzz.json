{
	"driver": {
		"type": "unix",
		"exec": {
			"path": "./openssl",
			"args": ["./openssl", "s_server", "-key", "key.pem", "-cert", "cert.pem", "-4", "-naccept", "1", "-no_anti_replay"],
			"cwd": "./",
			"env": {
				"ASAN_OPTIONS": "abort_on_error=1:symbolize=0:detect_leaks=0",
				"LD_PRELOAD": "libfaketime.so.1",
				"FAKETIME": "+0 i0",
				"FAKETIME_NO_CACHE": "1"
			}
		},
		"disable_aslr": true,
		"forkserver": true
	},
	"loader": {
		"type": "replay"
	},
	"channel": {
		"type": "tcp",
		"endpoint": "127.0.0.1",
		"port": 4433,
		"fork_before_accept": true
	},
	"generator": {
		"type": "reactive",
		"seeds": "./seeds/"
	},
	"tracker": {
		"type": "coverage"
	},
	"strategy": {
		"type": "uniform"
	},
	"fuzzer": {
		"cwd": "./targets/openssl/",
		"work_dir": "./workdir/",
		"resume": true
	}
}
